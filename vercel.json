{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "OPTIONS",
        "HEAD"
      ]
    }
  ],
  "crons": [
    {
      "path": "/redis/process-email-queue",
      "schedule": "0 1 * * *",
      "headers": {
        "x-secret-token": "@QUEUE_SECRET"
      }
    }
  ]
}